@*@model IEnumerable<THLWToolBox.Models.PlayerUnitData>*@
@model THLWToolBox.Models.PlayerUnitSwitchLinkHelperViewModel
@using THLWToolBox.Helpers;

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link rel="stylesheet" href="~/css/filter.css" asp-append-version="true" />
</head>

<style>
    .swith-link-units {
        border: none;
        background: white;
        padding: 7px 7px;
        text-align: left;
        text-decoration: none;
        display: inline-block;
        border: 1px solid rgba(0, 0, 0, 0.2);
    }

    .units-img-name-box {
        position: relative;
        display: inline-block;
        width: 60px;
        font-size: 12px;
        padding: 2px 2px;
        margin-top: 1px;
    }

    .units-img-name-box img {
        width: 100%;
        height: auto;
        position: relative;
        margin: 0;
    }
</style>

<!-- Modal -->
<div class="modal fade" id="unitSwitchLinkFilterHelperModal" tabindex="-1" aria-labelledby="unitSwitchLinkFilterHelper" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="unitSwitchLinkFilterHelper">帮助：亲密关系查询器</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>有关亲密关系详情见我的文章：<a href="https://www.bilibili.com/read/cv22187818">换位连携机制详解</a></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-bs-dismiss="modal">关闭</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">
        //$('#nameinput1').autocomplete({
        //    source: '/PlayerUnitSwitchLinkHelper/SearchUser' + $('#nameinput1').val()
        //});
        $('#nameinput1').autocomplete({
            source: function (request, response) {
                $.ajax({
                    url: '/PlayerUnitSwitchLinkHelper/SearchUser',
                    dataType: 'json',
                    data: { term: $('#nameinput1').val() },
                    success: function (data) {
                        var result = $.map(data, function (item) {
                            return {
                                label: item
                            };
                        });
                        return response(result);
                    }
                });
            },
            select: function (event, ui) {
                event.preventDefault();
                $('#nameinput1').val(ui.item.label);
            },
            create: function () {
                $(this).data('ui-autocomplete')._renderItem = function (ul, item) {
                    return $('<li>')
                        .append('<div id="ui-id-6" tabindex="-1" class="ui-menu-item-wrapper">'
                        + item.label + '<br></div>')
                        .appendTo(ul);
                };
            }
        });
</script>
}

<p><b><font color="red">*数据更新日期：@Html.Raw(GeneralHelper.DATA_UPDATE_DATE), 当前版本：@Html.Raw(GeneralHelper.VERSION_STR)</font></b></p>

<div class="text-center">
    <div class="title-box"><img src="@Url.Content("~/res/website/index_btn_heart.png")" width="60" height="60" /> 亲密关系查询器</div>
</div>

<div class="home-box">
    <form asp-controller="PlayerUnitSwitchLinkHelper" asp-action="Index" method="post">
        <div class="filter-box">
            <div class="title-box-1">按角色名查询</div>
            <div class="selects-grid">
                <div class="selects-box" style="text-align: right">角色名+泛异记号（带补全建议）:</div>
                <div class="selects-box">
                    <input type="text" id="nameinput1" asp-for="UnitSymbolName" class="selector">
                </div>
            </div>
        </div>
        <div class="submit-title-box-1"></div>
        <input type="submit" value="确定" class="btn-submit" />
        <button type="button" class="btn-submit btn-helper" data-bs-toggle="modal" data-bs-target="#unitSwitchLinkFilterHelperModal">帮助</button>
    </form>
</div>

<div class="home-box">
    <table class="table table-light table-bordered">
        <thead>
            <tr>
                <th>
                    头像
                </th>
                <th>
                    角色名
                </th>
                <th>
                    泛异记号
                </th>
                <th>
                    亲密关系角色列表
                </th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.PlayerUnitDatas!)
        {
            <tr>
                <td>
                    <div class="picture-unit-img-wrapper"><img src="@Url.Content("~/res/units_img/" + item.playerUnitData.id + ".png")" alt="暂无图片" onerror="this.src='@Url.Content("~/res/website/noimg.png")';" /></div>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.playerUnitData.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.playerUnitData.symbol_name)
                </td>
                <td>
                    <div class="swith-link-units">
                        @Html.Raw(GeneralHelper.DisplayUnitLists(item.relatedUnits, Url))
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
